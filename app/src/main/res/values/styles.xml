<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MathTextView" parent="@android:style/Widget.TextView">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/math_text_size</item>
    </style>

    <style name="ResultTextView" parent="MathTextView">
        <item name="android:textSize">@dimen/result_text_size</item>
        <item name="android:textColor">@color/colorTextResult</item>
    </style>

    <style name="CustomButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="NumberButton" parent="CustomButton">
        <item name="android:textColor">@color/colorNumberButton</item>
        <item name="android:textSize">@dimen/number_text_size</item>
    </style>

    <style name="OperatorButton" parent="CustomButton">
        <item name="android:textColor">@color/colorNumberButton</item>
        <item name="android:textSize">@dimen/operator_text_size</item>
    </style>
</resources>
